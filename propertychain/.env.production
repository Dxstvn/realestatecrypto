# Production Environment Variables - PropertyChain
# Following UpdatedUIPlan.md Step 50 specifications

# Application
NODE_ENV=production
NEXT_PUBLIC_APP_NAME=PropertyChain
NEXT_PUBLIC_APP_URL=https://propertychain.com
NEXT_PUBLIC_API_URL=https://api.propertychain.com
NEXT_PUBLIC_WS_URL=wss://api.propertychain.com

# Database
DATABASE_URL=postgresql://user:password@db.propertychain.com:5432/propertychain
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10
DATABASE_SSL=true

# Redis Cache
REDIS_URL=redis://cache.propertychain.com:6379
REDIS_PASSWORD=your-redis-password
REDIS_TLS=true

# Authentication
NEXTAUTH_URL=https://propertychain.com
NEXTAUTH_SECRET=your-production-secret-key-min-32-chars
JWT_SECRET=your-jwt-secret-key
JWT_EXPIRY=7d

# Blockchain
BLOCKCHAIN_NETWORK=mainnet
INFURA_PROJECT_ID=your-infura-project-id
ALCHEMY_API_KEY=your-alchemy-api-key
ETHERSCAN_API_KEY=your-etherscan-api-key
CONTRACT_ADDRESS=0x0000000000000000000000000000000000000000

# AWS Services
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
S3_BUCKET_NAME=propertychain-assets
S3_BUCKET_REGION=us-east-1
CLOUDFRONT_DISTRIBUTION_ID=your-distribution-id
CLOUDFRONT_URL=https://cdn.propertychain.com

# Monitoring
NEXT_PUBLIC_SENTRY_DSN=https://your-key@sentry.io/project-id
SENTRY_ORG=propertychain
SENTRY_PROJECT=web
SENTRY_AUTH_TOKEN=your-sentry-auth-token
SENTRY_ENVIRONMENT=production

# Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX
NEXT_PUBLIC_GTM_ID=GTM-XXXXXXX
MIXPANEL_TOKEN=your-mixpanel-token
HOTJAR_ID=your-hotjar-id

# Payment Processing
STRIPE_PUBLIC_KEY=pk_live_xxxxxxxxxxxxx
STRIPE_SECRET_KEY=sk_live_xxxxxxxxxxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxxxxxxxxxx
PLAID_CLIENT_ID=your-plaid-client-id
PLAID_SECRET=your-plaid-secret
PLAID_ENV=production

# Email Service
SENDGRID_API_KEY=SG.xxxxxxxxxxxxx
SENDGRID_FROM_EMAIL=noreply@propertychain.com
SENDGRID_REPLY_TO=support@propertychain.com

# SMS Service
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# KYC/AML
JUMIO_API_TOKEN=your-jumio-token
JUMIO_API_SECRET=your-jumio-secret
CHAINALYSIS_API_KEY=your-chainalysis-key

# Maps & Geocoding
NEXT_PUBLIC_GOOGLE_MAPS_KEY=AIzaxxxxxxxxxxxxx
MAPBOX_ACCESS_TOKEN=pk.xxxxxxxxxxxxx

# IPFS
IPFS_API_URL=https://ipfs.infura.io:5001
IPFS_GATEWAY_URL=https://gateway.ipfs.io
PINATA_API_KEY=your-pinata-api-key
PINATA_SECRET_KEY=your-pinata-secret

# Rate Limiting
RATE_LIMIT_WINDOW=15m
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WHITELIST=127.0.0.1,::1

# Security
ENCRYPTION_KEY=your-32-character-encryption-key
API_KEY_SALT=your-api-key-salt
CORS_ALLOWED_ORIGINS=https://propertychain.com,https://app.propertychain.com
CSP_REPORT_URI=https://api.propertychain.com/csp-report

# Feature Flags
ENABLE_BETA_FEATURES=false
ENABLE_MAINTENANCE_MODE=false
ENABLE_DEBUG_MODE=false

# CDN & Assets
CDN_URL=https://cdn.propertychain.com
ASSET_PREFIX=https://cdn.propertychain.com
IMAGE_OPTIMIZATION_URL=https://images.propertychain.com

# Logging
LOG_LEVEL=warn
LOG_FORMAT=json
LOG_DESTINATION=cloudwatch

# Performance
ENABLE_CACHE=true
CACHE_TTL=3600
ENABLE_COMPRESSION=true
ENABLE_MINIFICATION=true

# Social OAuth
GOOGLE_CLIENT_ID=xxxxxxxxxxxxx.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=GOCSPX-xxxxxxxxxxxxx
FACEBOOK_APP_ID=xxxxxxxxxxxxx
FACEBOOK_APP_SECRET=xxxxxxxxxxxxx
TWITTER_CLIENT_ID=xxxxxxxxxxxxx
TWITTER_CLIENT_SECRET=xxxxxxxxxxxxx

# Webhook URLs
WEBHOOK_URL_PROPERTY_CREATED=https://hooks.propertychain.com/property-created
WEBHOOK_URL_INVESTMENT_COMPLETED=https://hooks.propertychain.com/investment-completed
WEBHOOK_SECRET=your-webhook-secret

# Backup & Recovery
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=propertychain-backups

# Compliance
ENABLE_GDPR=true
ENABLE_CCPA=true
DATA_RETENTION_DAYS=2555
AUDIT_LOG_ENABLED=true