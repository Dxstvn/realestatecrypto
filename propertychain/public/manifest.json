  "shortcuts": [
    {
      "name": "View Properties",
      "short_name": "Properties",
      "description": "Browse available properties",
      "url": "/properties",
      "icons": [
        {
          "src": "/icons/shortcuts/properties.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "My Portfolio",
      "short_name": "Portfolio",
      "description": "View your investments",
      "url": "/dashboard/portfolio",
      "icons": [
        {
          "src": "/icons/shortcuts/portfolio.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Live Auctions",
      "short_name": "Auctions",
      "description": "Participate in live property auctions",
      "url": "/auctions",
      "icons": [
        {
          "src": "/icons/shortcuts/auctions.png",
          "sizes": "96x96"
        }
      ]
    }
  ],
  "related_applications": [],
  "prefer_related_applications": false,
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "file",
          "accept": ["image/*", "application/pdf"]
        }
      ]
    }
  },
  "protocol_handlers": [
    {
      "protocol": "web+property",
      "url": "/property?id=%s"
    }
  ],
  "edge_side_panel": {
    "preferred_width": 400
  },
  "display_override": [
    "window-controls-overlay",
    "standalone",
    "browser"
  ],
  "launch_handler": {
    "client_mode": "focus-existing"
  },
  "file_handlers": [
    {
      "action": "/open",
      "accept": {
        "application/pdf": [".pdf"],
        "image/*": [".jpg", ".jpeg", ".png", ".webp"]
      }
    }
  ],
  "handle_links": "preferred",
  "scope_extensions": [
    {
      "origin": "*.propertychain.com"
    }
  ]
}